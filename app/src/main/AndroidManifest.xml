<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.isen.chakouri.pourcombien">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/logo_pour_combien"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/logo_pour_combien_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".Activities.SplashScreen"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category
                        android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.EndGameActivity">
        </activity>
        <activity
                android:name=".Activities.RulesActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.DefiActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.SecondChoiceActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.MatchActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.FirstChoiceActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.QuestionActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.VersusActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.HomeActivity"
                android:screenOrientation="portrait">

        </activity>
        <activity
                android:name=".Activities.NotMatchActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.AddChallengeActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activities.ModeActivity"
                android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>