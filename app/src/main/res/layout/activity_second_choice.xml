<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Activities.SecondChoiceActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNumber3" android:textSize="40sp"
            android:textColor="@color/pale_mauve" android:fontFamily="@font/fresh_marker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="32dp"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="46dp" app:srcCompat="@drawable/home2"
            android:id="@+id/homebutton4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Suivant"
            android:layout_width="143dp"
            android:layout_height="60dp"
            android:id="@+id/buttonPlay4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="118dp" android:layout_marginEnd="118dp"
            android:textColor="@color/pale_mauve" android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.125"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/seekBar3"/>
    <TextView
            android:text="Joueur 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="50sp"
            android:fontFamily="@font/fun_sized" android:textColor="@color/pale_mauve"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_height="27dp"
            android:progress="1"
            android:id="@+id/seekBar3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textNumber3"/>
    <TextView
            android:text="Choisis un nombre :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="25sp"
            android:textColor="@color/violet_blue" android:fontFamily="@font/fresh_marker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.556"
            android:layout_marginTop="118dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
</android.support.constraint.ConstraintLayout>