<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Activities.FirstChoiceActivity">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="56dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/pour_combien_logo" android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/next_step"
            android:layout_width="143dp"
            android:layout_height="60dp"
            android:id="@+id/buttonPlay3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="118dp" android:layout_marginEnd="118dp"
            android:textColor="@color/pale_mauve" android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.125" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar2"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_height="29dp"
            android:max="7"
            android:progress="1"
            android:id="@+id/seekBar2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textNumber2"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="46dp" app:srcCompat="@drawable/home2"
            android:id="@+id/homebutton3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:contentDescription="@string/home_button"/>
    <TextView
            android:text="@string/default_player1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTargeted" android:textSize="50sp"
            android:fontFamily="@font/fun_sized" android:textColor="@color/pale_mauve"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/instructions_number_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textSize="25sp"
            android:textColor="@color/violet_blue" android:fontFamily="@font/fresh_marker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47" android:layout_marginTop="118dp"
            app:layout_constraintTop_toBottomOf="@+id/playerTargeted"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNumber2" android:textSize="40sp"
            android:textColor="@color/pale_mauve" android:fontFamily="@font/fresh_marker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView9"/>
</android.support.constraint.ConstraintLayout>