<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ModeActivity">
    <ImageView
            android:layout_width="114dp"
            android:layout_height="78dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="46dp" app:srcCompat="@drawable/home2"
            android:id="@+id/homebutton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Mode"
            android:layout_width="200dp"
            android:layout_height="59dp"
            android:id="@+id/tittle" android:fontFamily="@font/intro_inline"
            android:textColor="@color/pale_mauve" android:textSize="50sp" android:textAlignment="center"
            android:layout_marginTop="101dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="125dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="125dp"/>
    <Button
            android:text="DEBILE"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/sillybutton" android:background="@color/pale_mauve"
            android:fontFamily="@font/fun_sized" android:layout_marginTop="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/tittle" android:textSize="50sp"
            android:textColor="@color/violet_blue"/>
    <Button
            android:text="hard"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/hard_button" android:background="@color/pale_mauve"
            android:fontFamily="@font/fun_sized" android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/sillybutton" android:textSize="50sp"
            android:textColor="@color/violet_blue"/>
    <Button
            android:text="Alcolo"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/alcoholobutton" android:background="@color/pale_mauve"
            android:fontFamily="@font/fun_sized" android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/hard_button" android:textSize="50sp"
            android:textColor="@color/violet_blue"/>
</android.support.constraint.ConstraintLayout>
