<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SpalshScreen" android:id="@+id/SplashScreen"
        android:background="@color/black">
    <ImageView
            android:layout_width="323dp"
            android:layout_height="212dp" app:srcCompat="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/logoPourCombien" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintVertical_bias="0.498"
            app:layout_constraintHorizontal_bias="1.0"
            android:contentDescription="@string/pour_combien_logo"/>
    <TextView
            android:layout_width="293dp"
            android:layout_height="187dp"
            android:id="@+id/introductionText"
            android:text="@string/text_splash_screen"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="36sp"
            android:fontFamily="@font/fresh_marker"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>