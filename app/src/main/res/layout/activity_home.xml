<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.HomeActivity"
        android:background="@drawable/background">
    <EditText
            android:layout_width="228dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name2Field" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Joueur 2"
            android:textColor="@color/colorAccent" app:layout_constraintHorizontal_bias="0.507"
            android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/name1Field"/>
    <EditText
            android:layout_width="228dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name3Field"
            android:hint="Joueur 3"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/name2Field"/>
    <ImageView
            android:layout_width="344dp"
            android:layout_height="243dp" app:srcCompat="@drawable/logo"
            android:id="@+id/LogoView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="228dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name1Field" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/LogoView" android:hint="Joueur 1"
            android:textColor="@color/colorAccent" app:layout_constraintHorizontal_bias="0.507"
            android:layout_marginTop="8dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="47dp"
            android:layout_height="51dp"
            android:clickable="true" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/addFieldButton" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/name3Field" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="93dp"/>
    <Button
            android:text="Jouer"
            android:layout_width="143dp"
            android:layout_height="60dp"
            android:id="@+id/buttonPlay" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="45dp" android:layout_marginStart="118dp" android:layout_marginEnd="118dp"
            android:textColor="@color/pale_mauve" android:background="@color/colorPrimary"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/addFieldButton"/>
</android.support.constraint.ConstraintLayout>